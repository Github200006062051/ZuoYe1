<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:paddingLeft="15dp"
    android:paddingBottom="18dp" android:orientation="vertical" android:background="@drawable/shape_titlebar">
    <LinearLayout
        android:id="@+id/nav_header_ll"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/nav_header_img"
            android:layout_width="36dp"
            android:src="@mipmap/icon_user"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/nav_header_name"
            android:layout_width="wrap_content"
            android:background="#00000000"
            android:textColor="@android:color/white"
            android:text="八怪不姓丑"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="18sp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:id="@+id/nav_header_id"/>
</LinearLayout>